<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EdicionActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/edtid"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:hint="Codigo"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/edtnombre"
        android:layout_width="176dp"
        android:layout_height="47dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtdepartamento"
        android:layout_width="176dp"
        android:layout_height="46dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Departamento"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtnombre" />

    <EditText
        android:id="@+id/edtciudad"
        android:layout_width="176dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Ciudad"
        android:inputType="textPersonName"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtdepartamento" />

    <EditText
        android:id="@+id/edDescripcion"
        android:layout_width="176dp"
        android:layout_height="76dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="number"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtciudad" />

    <EditText
        android:id="@+id/edtlatitud2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="numberSigned|numberDecimal"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edDescripcion" />

    <EditText
        android:id="@+id/edtlongitud2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="numberSigned|numberDecimal"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtlatitud2" />

    <Button
        android:id="@+id/btnactualizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="38dp"
        android:background="@color/black"
        android:text="ACTUALIZAR"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btneliminar"
        app:layout_constraintTop_toBottomOf="@+id/edtlongitud2" />

    <Button
        android:id="@+id/btneliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="38dp"
        android:background="@color/black"
        android:text="ELIMINAR"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtlongitud2" />

</androidx.constraintlayout.widget.ConstraintLayout>